<Window x:Class="EcomobilSituation2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tableau de bord - Direction" Height="450" Width="800" Background="#f5f5f5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Text="Suivi Statistique - Ecomobil" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   Margin="0,0,0,20"/>

        <!-- Contenu des stats -->
        <UniformGrid Grid.Row="1" Columns="2" Rows="3" Margin="0,0,0,10">
            <!-- Stat 1 -->
            <Border Background="White" Padding="10" Margin="10" CornerRadius="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Nombre de locations (période donnée)" FontWeight="Bold"/>
                    <TextBlock Text="452 locations" FontSize="16" Margin="0,10,0,0"/>
                    <TextBlock Text="(+12%) par rapport à la période précédente" Foreground="Green"/>
                </StackPanel>
            </Border>

            <!-- Stat 2 -->
            <Border Background="White" Padding="10" Margin="10" CornerRadius="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Locations par type de véhicule" FontWeight="Bold"/>
                    <TextBlock Text="SUV : 210 (46%)" FontSize="16" Margin="0,10,0,0"/>
                    <TextBlock Text="Utilitaires : 150 (33%)" />
                </StackPanel>
            </Border>

            <!-- Stat 3 -->
            <Border Background="White" Padding="10" Margin="10" CornerRadius="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chiffre d’affaires (période)" FontWeight="Bold"/>
                    <TextBlock Text="83 000 Ø" FontSize="16" Margin="0,10,0,0"/>
                    <TextBlock Text="+8% par rapport à la période précédente" Foreground="Green"/>
                </StackPanel>
            </Border>

            <!-- Stat 4 -->
            <Border Background="White" Padding="10" Margin="10" CornerRadius="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Chiffre d’affaires par type" FontWeight="Bold"/>
                    <TextBlock Text="SUV : 45 000 Ø" FontSize="16" Margin="0,10,0,0"/>
                    <TextBlock Text="Utilitaires : 32 000 Ø"/>
                </StackPanel>
            </Border>

            <!-- Stat 5 -->
            <Border Background="White" Padding="10" Margin="10" CornerRadius="10" BorderBrush="#ddd" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Sorties par type vs parc" FontWeight="Bold"/>
                    <TextBlock Text="SUV : 65%" FontSize="16" Margin="0,10,0,0"/>
                    <TextBlock Text="Utilitaires : 58%"/>
                    <TextBlock Text="Objectif : Suivi de l’entretien" FontStyle="Italic" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
</Window>
